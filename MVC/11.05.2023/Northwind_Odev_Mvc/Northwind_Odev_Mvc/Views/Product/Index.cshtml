@using Northwind_Odev_Mvc.Models;
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <div class="card">
  <div class="card-header">
    <h4>Product</h4>
  </div>
  <div class="card-body">
    <a asp-action="CreateProduct" asp-controller="Product"  class="btn btn-primary btn-sm">Add Product</a>
  </div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ProductId</th>
      <th scope="col">ProductName</th>
      <th scope="col">UnitPrice</th>
      <th scope="col">UnitInStock</th>
      
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var Product in Model)
        {
            <tr>
                <td>@Product.ProductId</td>
                <td>@Product.ProductName</td>
                <td>@Product.UnitPrice</td>
                <td>@Product.UnitsInStock</td>
                <td>
                    <a asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@Product.ProductId" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="UpdateProduct" asp-controller="Product" asp-route-id="@Product.ProductId" class="btn btn-warning btn-sm">Update</a>
                </td>
            </tr>
        }
  </tbody>
</table>
</div>


