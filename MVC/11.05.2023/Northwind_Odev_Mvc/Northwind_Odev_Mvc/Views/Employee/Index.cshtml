
@using Northwind_Odev_Mvc.Models
@model List<Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="card">
  <div class="card-header">
    <h4>Employee</h4>
  </div>
  <div class="card-body">
    <a asp-action="CreateEmployee" asp-controller="Employee"  class="btn btn-primary btn-sm">Add Employee</a>
  </div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">EmployeeId</th>
      <th scope="col">LastName</th>
      <th scope="col">FirstName</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.LastName</td>
                <td>@employee.FirstName</td>
                <td>
                    <a asp-action="DeleteEmployee" asp-controller="Employee" asp-route-id="@employee.EmployeeId" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="UpdateEmployee" asp-controller="Employee" asp-route-id="@employee.EmployeeId" class="btn btn-warning btn-sm">Update</a>
                </td>
            </tr>
        }
  </tbody>
</table>
</div>




