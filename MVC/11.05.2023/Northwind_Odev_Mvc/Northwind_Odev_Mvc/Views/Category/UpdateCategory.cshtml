@model Northwind_Odev_Mvc.Models.Category

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{

<form method="post">
   <div class="form-group">
    @Html.LabelFor(m=>m.CategoryName)
    @Html.TextBoxFor(m=>m.CategoryName,new {@class="form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(m=>m.Description)
    @Html.TextBoxFor(m=>m.Description,new {@class="form-control"})
  </div>
  
    <button type="submit" class="btn btn-primary">Update</button>
    </form>    
}

