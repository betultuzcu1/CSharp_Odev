
@model List<Category>
@{
    ViewData["Title"] = "GetProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>@ViewBag.CategoryName</h1>


@if (TempData["Error"] != null)
{
    @TempData["Error"]
}

<div class="card">
    <div>
        <h3>Category</h3>
        <a asp-action="Ekle" asp-controller="Category"  class="btn btn-primary btn-sm">delete</a>
    </div>
     <div class="card-body">
         <table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">delete</a>
                    <a asp-action="Update" asp-controller="Category" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>
    
</div>




