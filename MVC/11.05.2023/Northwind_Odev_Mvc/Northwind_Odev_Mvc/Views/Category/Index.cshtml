@using Northwind_Odev_Mvc.Models
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="card">
  <div class="card-header">
    <h4>Category</h4>
  </div>
  <div class="card-body">
    <a asp-action="CreateCategory" asp-controller="Category"  class="btn btn-primary btn-sm">Add Category</a>
  </div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">CategoryId</th>
      <th scope="col">CategoryName</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    <a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm">Update</a>
                </td>
            </tr>
        }
  </tbody>
</table>
</div>


